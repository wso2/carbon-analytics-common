<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">
	
	<jaxrs:server id="eventProcessorServices" address="/">
		<jaxrs:serviceBeans>
			<ref bean="analyticsBean"/>
		</jaxrs:serviceBeans>
        <jaxrs:outInterceptors>
            <ref bean="httpHeadersOutInterceptor"/>
        </jaxrs:outInterceptors>
		<jaxrs:providers>
		</jaxrs:providers>
	</jaxrs:server>
	
	<bean id="analyticsBean" class="org.wso2.carbon.event.processor.restapi.resources.AnalyticsResource"/>
	<bean id="httpHeadersOutInterceptor" class="org.wso2.carbon.event.processor.restapi.interceptors.HttpHeaderOutInterceptor"/>
</beans>
