<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon.analytics-common</groupId>
        <artifactId>event-receiver-feature</artifactId>
        <version>5.0.7-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.carbon.event.input.adapter.feature</artifactId>
    <packaging>pom</packaging>
    <name>WSO2 Carbon - Event Publisher Input Adapter Feature</name>
    <url>http://wso2.org</url>
    <description>
        This feature bundles all the input adapters.
    </description>

    <dependencies>

        <dependency>
            <groupId>org.wso2.carbon.analytics-common</groupId>
            <artifactId>org.wso2.carbon.event.input.adapter.server.feature</artifactId>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.analytics-common</groupId>
            <artifactId>org.wso2.carbon.event.input.adapter.http.server.feature</artifactId>
            <type>zip</type>
            <version>${carbon.analytics.common.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.analytics-common</groupId>
            <artifactId>org.wso2.carbon.event.input.adapter.soap.server.feature</artifactId>
            <type>zip</type>
            <version>${carbon.analytics.common.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.analytics-common</groupId>
            <artifactId>org.wso2.carbon.event.input.adapter.websocket.server.feature</artifactId>
            <type>zip</type>
            <version>${carbon.analytics.common.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.analytics-common</groupId>
            <artifactId>org.wso2.carbon.event.input.adapter.websocket.local.server.feature</artifactId>
            <type>zip</type>
            <version>${carbon.analytics.common.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.analytics-common</groupId>
            <artifactId>org.wso2.carbon.event.input.adapter.filetail.server.feature</artifactId>
            <type>zip</type>
            <version>${carbon.analytics.common.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.analytics-common</groupId>
            <artifactId>org.wso2.carbon.event.input.adapter.email.server.feature</artifactId>
            <type>zip</type>
            <version>${carbon.analytics.common.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.analytics-common</groupId>
            <artifactId>org.wso2.carbon.event.input.adapter.jms.server.feature</artifactId>
            <type>zip</type>
            <version>${carbon.analytics.common.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.analytics-common</groupId>
            <artifactId>org.wso2.carbon.event.input.adapter.mqtt.server.feature</artifactId>
            <type>zip</type>
            <version>${carbon.analytics.common.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.analytics-common</groupId>
            <artifactId>org.wso2.carbon.event.input.adapter.kafka.server.feature</artifactId>
            <type>zip</type>
            <version>${carbon.analytics.common.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.analytics-common</groupId>
            <artifactId>org.wso2.carbon.event.input.adapter.wso2event.server.feature</artifactId>
            <type>zip</type>
            <version>${carbon.analytics.common.version}</version>
        </dependency>

    </dependencies>


    <build>
        <plugins>
            <plugin>
                <groupId>org.wso2.maven</groupId>
                <artifactId>carbon-p2-plugin</artifactId>
                <version>${carbon.p2.plugin.version}</version>
                <executions>
                    <execution>
                        <id>4-p2-feature-generation</id>
                        <phase>package</phase>
                        <goals>
                            <goal>p2-feature-gen</goal>
                        </goals>
                        <configuration>
                            <id>org.wso2.carbon.event.input.adapter</id>
                            <propertiesFile>../../etc/feature.properties</propertiesFile>

                            <includedFeatures>
                                <includedFeatureDef>
                                    org.wso2.carbon.analytics-common:org.wso2.carbon.event.input.adapter.server.feature:${carbon.analytics.common.version}
                                </includedFeatureDef>
                                <includedFeatureDef>
                                    org.wso2.carbon.analytics-common:org.wso2.carbon.event.input.adapter.http.server.feature:${carbon.analytics.common.version}
                                </includedFeatureDef>
                                <includedFeatureDef>
                                    org.wso2.carbon.analytics-common:org.wso2.carbon.event.input.adapter.soap.server.feature:${carbon.analytics.common.version}
                                </includedFeatureDef>
                                <includedFeatureDef>
                                    org.wso2.carbon.analytics-common:org.wso2.carbon.event.input.adapter.websocket.server.feature:${carbon.analytics.common.version}
                                </includedFeatureDef>
                                <includedFeatureDef>
                                    org.wso2.carbon.analytics-common:org.wso2.carbon.event.input.adapter.websocket.local.server.feature:${carbon.analytics.common.version}
                                </includedFeatureDef>
                                <includedFeatureDef>
                                    org.wso2.carbon.analytics-common:org.wso2.carbon.event.input.adapter.filetail.server.feature:${carbon.analytics.common.version}
                                </includedFeatureDef>
                                <includedFeatureDef>
                                    org.wso2.carbon.analytics-common:org.wso2.carbon.event.input.adapter.email.server.feature:${carbon.analytics.common.version}
                                </includedFeatureDef>
                                <includedFeatureDef>
                                    org.wso2.carbon.analytics-common:org.wso2.carbon.event.input.adapter.jms.server.feature:${carbon.analytics.common.version}
                                </includedFeatureDef>
                                <includedFeatureDef>
                                    org.wso2.carbon.analytics-common:org.wso2.carbon.event.input.adapter.mqtt.server.feature:${carbon.analytics.common.version}
                                </includedFeatureDef>
                                <includedFeatureDef>
                                    org.wso2.carbon.analytics-common:org.wso2.carbon.event.input.adapter.kafka.server.feature:${carbon.analytics.common.version}
                                </includedFeatureDef>
                                <includedFeatureDef>
                                    org.wso2.carbon.analytics-common:org.wso2.carbon.event.input.adapter.wso2event.server.feature:${carbon.analytics.common.version}
                                </includedFeatureDef>
                            </includedFeatures>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
