        <SecureMinIdleTimeInPool>{{transport.binary.agent.secure_min_idle_time_in_pool}}</SecureMinIdleTimeInPool>
        {% if transport.binary.agent.ssl_enabled_protocols is defined %}
        <sslEnabledProtocols>{{transport.binary.agent.ssl_enabled_protocols}}</sslEnabledProtocols>
        {% endif %}
        {% if transport.binary.agent.ciphers is defined %}
        <ciphers>{{transport.binary.agent.ciphers}}</ciphers>
        {% endif %}
        {% if transport.binary.agent.exp_factor is defined %}
        <ExpFactor>{{transport.binary.agent.exp_factor}}</ExpFactor>
        {% else %}
