<DataAgentsConfiguration xmlns:svns="http://org.wso2.securevault/configuration">
    <Agent>
        <Name>Thrift</Name>
        <DataEndpointClass>org.wso2.carbon.databridge.agent.endpoint.thrift.ThriftDataEndpoint</DataEndpointClass>
        {% if transport.thrift.agent.trust_store is defined %}
        <TrustSore>{{transport.thrift.agent.trust_store}}</TrustSore>
        {% endif %}
        {% if transport.thrift.agent.trust_store_password is defined %}
        <TrustSorePassword>{{transport.thrift.agent.trust_store_password}}</TrustSorePassword>
        {% endif %}
        <QueueSize>{{transport.thrift.agent.queue_size}}</QueueSize>
        <BatchSize>{{transport.thrift.agent.batch_size}}</BatchSize>
        <CorePoolSize>{{transport.thrift.agent.core_pool_size}}</CorePoolSize>
        <SocketTimeoutMS>{{transport.thrift.agent.socket_timeout_ms}}</SocketTimeoutMS>
        <MaxPoolSize>{{transport.thrift.agent.max_pool_size}}</MaxPoolSize>
        <KeepAliveTimeInPool>{{transport.thrift.agent.keep_alive_time_in_pool}}</KeepAliveTimeInPool>
        <ReconnectionInterval>{{transport.thrift.agent.reconnection_interval}}</ReconnectionInterval>
        <MaxTransportPoolSize>{{transport.thrift.agent.max_transport_pool_size}}</MaxTransportPoolSize>
        <MaxIdleConnections>{{transport.thrift.agent.max_idle_connections}}</MaxIdleConnections>
        <EvictionTimePeriod>{{transport.thrift.agent.eviction_time_period}}</EvictionTimePeriod>
        <MinIdleTimeInPool>{{transport.thrift.agent.min_idle_time_in_pool}}</MinIdleTimeInPool>
        <SecureMaxTransportPoolSize>{{transport.thrift.agent.secure_max_transport_pool_size}}</SecureMaxTransportPoolSize>
        <SecureMaxIdleConnections>{{transport.thrift.agent.secure_max_idle_connections}}</SecureMaxIdleConnections>
        <SecureEvictionTimePeriod>{{transport.thrift.agent.secure_eviction_time_period}}</SecureEvictionTimePeriod>
        <SecureMinIdleTimeInPool>{{transport.thrift.agent.secure_min_idle_time_in_pool}}</SecureMinIdleTimeInPool>
        {% if transport.thrift.agent.ssl_enabled_protocols is defined %}
        <sslEnabledProtocols>{{transport.thrift.agent.ssl_enabled_protocols}}</sslEnabledProtocols>
        {% endif %}
        {% if transport.thrift.agent.ciphers is defined %}
        <ciphers>{{transport.thrift.agent.ciphers}}</ciphers>
        {% endif %}
        {% if transport.thrift.agent.exp_factor is defined %}
        <ExpFactor>{{transport.thrift.agent.exp_factor}}</ExpFactor>
        {% else %}
        <ExpFactor>1</ExpFactor>
        {% endif %}
        {% if transport.thrift.agent.max_reconnection_interval is defined %}
        <MaxReconnectionInterval>{{transport.thrift.agent.max_reconnection_interval}}</MaxReconnectionInterval>
        {% else %}
        <MaxReconnectionInterval>3600</MaxReconnectionInterval>
        {% endif %}
    </Agent>

    <Agent>
        <Name>Binary</Name>
        <DataEndpointClass>org.wso2.carbon.databridge.agent.endpoint.binary.BinaryDataEndpoint</DataEndpointClass>
        {% if transport.binary.agent.trust_store is defined %}
