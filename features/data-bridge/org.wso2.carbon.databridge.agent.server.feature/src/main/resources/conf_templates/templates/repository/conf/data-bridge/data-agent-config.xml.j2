        {% endif %}
        <QueueSize>{{transport.binary.agent.queue_size}}</QueueSize>
        <BatchSize>{{transport.binary.agent.batch_size}}</BatchSize>
        <CorePoolSize>{{transport.binary.agent.core_pool_size}}</CorePoolSize>
        <SocketTimeoutMS>{{transport.binary.agent.socket_timeout_ms}}</SocketTimeoutMS>
        <MaxPoolSize>{{transport.binary.agent.max_pool_size}}</MaxPoolSize>
        <KeepAliveTimeInPool>{{transport.binary.agent.keep_alive_time_in_pool}}</KeepAliveTimeInPool>
        <ReconnectionInterval>{{transport.binary.agent.reconnection_interval}}</ReconnectionInterval>
        <MaxTransportPoolSize>{{transport.binary.agent.max_transport_pool_size}}</MaxTransportPoolSize>
        <MaxIdleConnections>{{transport.binary.agent.max_idle_connections}}</MaxIdleConnections>
        <EvictionTimePeriod>{{transport.binary.agent.eviction_time_period}}</EvictionTimePeriod>
        <MinIdleTimeInPool>{{transport.binary.agent.min_idle_time_in_pool}}</MinIdleTimeInPool>
        <SecureMaxTransportPoolSize>{{transport.binary.agent.secure_max_transport_pool_size}}</SecureMaxTransportPoolSize>
        <SecureMaxIdleConnections>{{transport.binary.agent.secure_max_idle_connections}}</SecureMaxIdleConnections>
